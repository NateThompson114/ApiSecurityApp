{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": false,
    "StackBlockedRequests": true,
    "RealIpHeader": "X-Real-IP",
    "HttpStatusCode": 429,
    "IpWhitelist": [ "127.0.0.1" ],
    "EndpointWhitelist": [], // "GET:/api/users" would bypass in the User Controller and the get call
    "GeneralRules": [
      {
        "Endpoint": "*", // * = all endpoints
        "Period": "5s", // 60s/1m/1h/1d
        "Limit": 2 // 100 calls
      }
      //{
      //  "Endpoint": "*", // * = all endpoints
      //  "Period": "1m", // 60s/1m/1h/1d
      //  "Limit": 10 // 100 calls
      //}
    ]
  }
}
